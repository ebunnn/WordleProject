<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Guess 1 -->
    <TextView
        android:id="@+id/tv_guess_1_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_guess_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/tv_guess_1_label"
        app:layout_constraintStart_toEndOf="@+id/tv_guess_1_label"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_check_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/tv_guess_1_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Guess 2 -->
    <TextView
        android:id="@+id/tv_guess_2_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #2"
        app:layout_constraintTop_toBottomOf="@+id/tv_guess_1_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_guess_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/tv_guess_2_label"
        app:layout_constraintStart_toEndOf="@+id/tv_guess_2_label"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_check_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/tv_guess_2_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Guess 3 -->
    <TextView
        android:id="@+id/tv_guess_3_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guess #3"
        app:layout_constraintTop_toBottomOf="@+id/tv_guess_2_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_guess_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/tv_guess_3_label"
        app:layout_constraintStart_toEndOf="@+id/tv_guess_3_label"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_check_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/tv_guess_3_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <!-- Final Word -->
    <TextView
        android:id="@+id/tv_final_word_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Word:"
        app:layout_constraintTop_toBottomOf="@+id/tv_guess_3_label"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/tv_final_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintTop_toTopOf="@+id/tv_final_word_label"
        app:layout_constraintStart_toEndOf="@+id/tv_final_word_label"
        android:layout_marginStart="16dp" />

    <!-- Input for user guess -->
    <EditText
        android:id="@+id/et_simple"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter a 4-letter word"
        app:layout_constraintTop_toBottomOf="@+id/tv_final_word"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_submit"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintWidth_percent="0.7" />

    <!-- Button to submit guess -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toTopOf="@+id/et_simple"
        app:layout_constraintStart_toEndOf="@+id/et_simple"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
